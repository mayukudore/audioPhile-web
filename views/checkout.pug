extends layout

block content
    include _header


    .checkout-outermost-container 


        #checkoutModalConfirmation.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-dialog-centered
                .modal-content.modal-biggest-container
                    .modal-header.check-out-modal-header
                        .circle-with-tick
                            i.fa.fa-check.round-check-sign.fa-lg


                    .modal-body.check-out-modal-body
                        h3.checkout-modal-body-main-text THANK YOU FOR  YOUR ORDER 
                        P.checkout-modal-confirmation-text You will receive an email confirmation shortly.
                        .product-grandtotal-box 
                            .image-price-quantity-variant.row 
                                .col-8.imgage-variant 
                                    img(src='/images/cart/image-xx99-mark-two-headphones.jpg')
                                    .price-quantity-box 
                                        h4.variant-name XX99 MK II 
                                        p.price-of-product $ 2,999
                                p.quantity-box-checkout-modal.col-4 x1
                            p.the-ramaining-item-count and 2 other item(s)
                        .the-grand-total-container 
                            h3.grand-total-modal GRAND TOTAL 
                            p.total-cost-modal $ 5,446




                    .checkout-modal-footer
                        .row

                            button.col-12.check-out-modal-btn.submit.see-product-button(type='button') BACK TO HOME

        .checkout-form-wrapper

            form
                .firstbox
                    h3.checkout-text CHECKOUT 
                    p.checkout-sub-text BILLING DETAILS 
                    .name-address-outer-container
                        .name-address-container
                            .label-container
                                label(for='name') Name
                            .input-box
                                input(type='email' id='name' name='name' placeholder='Alexei Ward')

                        .name-address-container    
                            .label-container
                                label(for='email') Email Address
                            .input-box
                                input(type='email' id='emmail' name='email' placeholder='alexei@mail.com')
                    .label-container
                        label(for='phone') Phone Number
                    .input-box.phone-input-box
                        input#phone(type='tel' name='phone' placeholder='+1202-555-0136')
                    .shipping-info 
                        p SHIPPING INFO
                    .label-container
                        label(for='address') Your Address 
                    .input-box
                        input(type='text' name='address' id='address' placeholder='1137 Williams Avenue')
                    .name-address-outer-container
                        .name-address-container
                            .label-container
                                label(for='zip') ZIP Code
                            .input-box
                                input(type='number' name='zip' id='zip' pattern='[0-9]*' inputmode='numeric' placeholder='10001') 
                        .name-address-container
                            .label-container
                                label(for='city') City
                            .input-box
                                input(type='text' name='city' id='city' placeholder='New York')
                    .label-container
                        label(for='country') Country
                    .input-box.phone-input-box
                        input(type='text' name='country' id='country' placeholder='United States')  
                    .payment-info 
                        p.payment-details PAYMENT DETAILS
                    .name-address-outer-container
                        h5.payment-method Payment Method
                        .input-box.eMoney
                            .button-input  
                                input(type='radio' name='payment' id="e-money")
                            .button-label
                                label(for='e-money') e-Money
                    .phone-input-box.e-money-querry
                        .input-box.cash-on-delivery
                            .button-input  
                                input(type='radio' name='payment' id="cash")
                            .button-label
                                label(for='cash') Cash on Delivery
                    .name-address-outer-container
                        .name-address-container
                            .label-container
                                label(for='e-money-num') e-Money Number
                            .input-box
                                input(type='number' name='e-money-num' id='e-money-num' placeholder='238521993')
                        .name-address-container
                            .label-container
                                label(for='e-money-pin') e-Money PIN
                            .input-box
                                input(type='number' name='e-money-pin' id='e-money-pin' placeholder='1239')
                .second-box 
                    h3.summary-header SUMMARY
                    .row 
                        .col-sm-6.col-6.image-box-checkout
                            img(src='images/cart/image-xx99-mark-two-headphones.jpg')
                            .text-for-checkout-summary
                                h6 XX99 MK II 
                                p $ 2,999
                        .col-sm-6.col-6.summary-amount-num  
                            p x1
                    .row 
                        .col-sm-6.col-6.image-box-checkout
                            img(src='images/cart/image-xx59-headphones.jpg')
                            .text-for-checkout-summary
                                h6 XX59 
                                p $ 899
                        .col-sm-6.col-6.summary-amount-num 
                            p x2
                    .row 
                        .col-sm-6.col-8.image-box-checkout
                            img(src='images/cart/image-yx1-earphones.jpg')
                            .text-for-checkout-summary
                                h6 YX1 
                                p $ 599
                        .col-sm-6.col-4.summary-amount-num  
                            p x1
                    .row
                        .col-sm-6.col-6.summary-lower-texts 
                            p TOTAL 
                        .col-sm-6.col-6.summary-shipping-cost 
                            p $ 5,396
                    .row
                        .col-sm-6.col-6.summary-lower-texts 
                            p SHIPPING 
                        .col-sm-6.col-6.summary-shipping-cost 
                            p $ 50
                    .row
                        .col-sm-6.col-6.summary-lower-texts 
                            p VAT (INCLUDED) 
                        .col-sm-6.col-6.summary-shipping-cost 
                            p $ 1,076
                    .row.summary.last.row
                        .col-sm-6.col-6.summary-lower-texts 
                            p GRAND TOTAL 
                        .col-sm-6.col-6.grand-total 
                            p $ 5,446
                    button.submit-checkout-last-button.see-product-button.checkout-button-cart(type='button' data-bs-toggle='modal' data-bs-target='#checkoutModalConfirmation') CONTINUE & PAY

    include _footer